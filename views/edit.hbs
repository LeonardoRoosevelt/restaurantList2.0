<form action="/restaurants/{{restaurant._id}}/edit" method="POST">
  <div class="form-group">
    <label for="name">Name*</label>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{restaurant.name}}">
  </div>
  <div class="form-group">
    <label for="name_en">English Name*</label>
    <input type="text" class="form-control" placeholder="name_en" name="name_en" value="{{restaurant.name_en}}">
  </div>
  <div class="form-group">
    <label for="category">Category*</label>
    <input type="text" class="form-control" placeholder="category" name="category" value="{{restaurant.category}}">
  </div>
  <div class="form-group">
    <label for="image">image*</label>
    <input type="text" class="form-control" placeholder="image" name="image" value="{{restaurant.image}}">
  </div>
  <div class="form-group">
    <label for="location">Location*</label>
    <input type="text" class="form-control" placeholder="location" name="location" value="{{restaurant.location}}">
  </div>
  <div class="form-group">
    <label for="phone">Phone*</label>
    <input type="text" class="form-control" placeholder="phone" name="phone" value="{{restaurant.phone}}">
  </div>
  <div class="form-group">
    <label for="google_map">Google Map*</label>
    <input type="text" class="form-control" placeholder="google_map" name="google_map" value="{{restaurant.google_map}}">
  </div>
  <div class="form-group">
    <label for="rating">Rating*</label>
    <input type="text" class="form-control" placeholder="rating" name="rating" value="{{restaurant.rating}}">
  </div>
  <div class="form-group">
    <label for="description">Description*</label>
    <textarea type="text" class="form-control" placeholder="description" name="description">{{restaurant.description}}</textarea>
  </div>
  <button type="submit">save</button>
  <a href="/">back</a>
</form>